# Конфигурация для интеграции с Mod1_v2 и Mod2-v1

# Базовый URL для Mod1 сервиса (ASR + Chunk)
VITE_MOD1_BASE_URL=http://localhost:8080

# Базовый URL для Mod2 сервиса (NLP + Layout)
VITE_MOD2_BASE_URL=http://localhost:8001

# Базовый URL для Mod3 сервиса (Visual Elements Mapping)
VITE_MOD3_BASE_URL=http://localhost:9001

# API ключи для аутентификации (опционально)
VITE_MOD1_API_KEY=
VITE_MOD2_API_KEY=
VITE_MOD3_API_KEY=

# Настройки WebSocket
VITE_MOD1_WS_RECONNECT_ATTEMPTS=5
VITE_MOD1_WS_RECONNECT_DELAY=2000

# Настройки аудио
VITE_AUDIO_CHUNK_SIZE=1000
VITE_AUDIO_MIME_TYPE=audio/webm;codecs=opus

# Настройки транскрипции
VITE_DEFAULT_LANGUAGE=ru-RU
VITE_EMIT_PARTIAL=true

# Настройки NLP
VITE_NLP_ENABLED=true
VITE_LAYOUT_TEMPLATE=hero-main-footer

# Настройки Visual Mapping
VITE_VISUAL_MAPPING_ENABLED=true
VITE_FUZZY_THRESHOLD=0.8
VITE_MAX_COMPONENTS_PER_SECTION=5

